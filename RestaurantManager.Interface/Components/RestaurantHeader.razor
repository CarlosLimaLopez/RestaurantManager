@using RestaurantManager.Interface.DTOs.Response

<MudPaper Elevation="0" Class="pa-4">

    <MudGrid AlignItems="AlignItems.Center">

        <MudItem xs="12" sm="6">
            <MudText Class="restaurant-name" Style="@NameStyle">
                @RestaurantHeaderDto.Name
            </MudText>

            @if (!string.IsNullOrWhiteSpace(@RestaurantHeaderDto.Description))
            {
                <MudText Class="restaurant-description" Style="@NameStyle">
                    @RestaurantHeaderDto.Description
                </MudText>
            }
        </MudItem>

        <MudItem xs="0" sm="3">
        </MudItem>

        @if (!string.IsNullOrWhiteSpace(RestaurantHeaderDto.LogoPath))
        {
            <MudItem xs="12" sm="3" Class="d-flex justify-center justify-sm-end mt-2 mt-sm-0">
                <MudImage Src="@RestaurantHeaderDto.LogoPath" Class="logo" />
            </MudItem>
        }

    </MudGrid>

</MudPaper>

@code {
    [Parameter, EditorRequired]
    public RestaurantResponse RestaurantHeaderDto { get; set; } = default!;

    private string NameStyle => $"color:{(string.IsNullOrWhiteSpace(RestaurantHeaderDto.NameColor) ? "inherit" : RestaurantHeaderDto.NameColor)}";

    private string DescriptionStyle => $"color:{(string.IsNullOrWhiteSpace(RestaurantHeaderDto.DescriptionColor) ? "inherit" : RestaurantHeaderDto.DescriptionColor)}";

}
