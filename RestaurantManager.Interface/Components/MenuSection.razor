@using RestaurantManager.Interface.DTOs.Response

<MudPaper Elevation="0" Class="pa-3 mb-4">

    <MudText Class="mb-3 menu-section-name" Style="@NameStyle">
        @MenuSectionDto.Name
    </MudText>

    @foreach (var dish in @MenuSectionDto.Dishes)
    {
        <MenuDish MenuDishDto="@dish" />
    }

    @if (!string.IsNullOrWhiteSpace(@MenuSectionDto.Note))
    {
        <MudText Class="mt-1 menu-section-note">
            @MenuSectionDto.Note
        </MudText>
    }

</MudPaper>

@code {
    [Parameter, EditorRequired]
    public MenuSectionResponse MenuSectionDto { get; set; } = default!;

    [Parameter, EditorRequired]
    public string? NameSectionColor { get; set; } = default!;

    private string NameStyle => $"color:{(string.IsNullOrWhiteSpace(NameSectionColor) ? "inherit" : NameSectionColor)}";
}