@using RestaurantManager.Restaurant

<MudGrid AlignItems="AlignItems.Center" Class="mb-2">
    <MudItem xs="8" Class="mt-1">
        <MudText Class="dish-name" Display="Inline">@MenuDishDto.Name</MudText>
    </MudItem>

    <MudItem xs="4" Class="d-flex justify-end align-center mt-2">
        @if (!string.IsNullOrWhiteSpace(MenuDishDto.Prize))
        {
            <MudText Class="dish-price">@MenuDishDto.Prize</MudText>
        }
    </MudItem>

    @if (!string.IsNullOrWhiteSpace(MenuDishDto.Description))
    {
        <MudItem xs="12" Class="pt-0">
                <MudText Class="dish-description">@MenuDishDto.Description</MudText>
        </MudItem>
    }

    @if (MenuDishDto.Allergens.Any())
    {
        <MudItem xs="12" Class="pt-0">
            @foreach (var allergen in MenuDishDto.Allergens)
            {
                <MudIcon Class="small-icon" Size="Size.Small" Icon=@($"fa-solid fa-{allergen.Icon}") Title="@allergen.Name.ToString()" />
            }
        </MudItem>
    }
</MudGrid>

@code {
    [Parameter, EditorRequired]
    public DishResponse MenuDishDto { get; set; } = default!;
}
